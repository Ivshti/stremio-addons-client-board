html
	background-image url('https://www.strem.io/3.0/background-0.jpg')
	background-size cover
	background-attachment fixed
	user-select none

html, body
	margin 0
	padding 0
	font-family Arial, Helvetica, Sans-Serif
	font-weight 300
	color white
	
ul, li
	list-style none

.board 
	z-index 99
	position relative
		
.boardRow
	padding-top 40px
	h2
		text-align center
		
	ul
		white-space nowrap

	li 
		background-size cover
		width 15%
		display inline-block
		transition all 0.3s ease-in 
		transform scale(1.0)
		backface-visibility hidden
		
		&:before 
			content: "";
			display: block;
			padding-top: 146.4%
		
		&.focused
			transform scale(1.4)
			box-shadow 0px 0px 15px 0px rgba(0,0,0,0.4)
			
	.square li
		&:before
			padding-top: 100%
	
	.landscape li
		&:before
			padding-top: 56.25%
	